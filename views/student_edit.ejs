<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title>CL | Edit Questions</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="/css/common.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link href="/css/student_evaluation.css" type="text/css" rel="stylesheet" media="screen,projection"/>


        <link rel="icon"  type="image/png" href="/img/crowdlearning.png">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script  src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
    
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a id="brand-image" class="brand-logo">CrowdLearning</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/<%=link%>/<%=classname%>/coursepage"><%= classname%></a></li>
        <li><a href="/<%= link%>/home">Course</a></li>
        <li><a href="/user/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
    <div class="mycontainer">
                <div class="row top-margin">

                         <div class="col s8">
                                  <form method="post" action="/student/<%=classname%>/myquestions/<%=qid%>">
                                    
                                    <div class="card  blue-grey lighten-5">
                                    <div class="card-content black-text">
                                      <div class="row"><h5>Question Body</h5>
                                        <textarea id="textarea1" name="question" class="materialize-textarea" required><%- current.question%></textarea>
                                      </div>
                                      </div>
                                    </div>
                                    
                                    <div class="card  blue-grey lighten-5">
                                    <div class="card-content black-text">
                                       <h5>Answer/Distractors</h5>
                                      <% for(var i=0; i < current.options.length; i++) { %>
                                      
                                          <h8><b>Option<%=i+1%></b></h8>
                                      <div class="input_fields_wrap">  
                                        <input name="options" type="text" id="option<%=i%>" value="<%-current.options[i]%>"/>
                                              </div>
                                              
                                      
                
              <% } %>
                                        
                                        <br><h8><b>The right answer is <%- current.correctanswer%></b></h8>
                                        <br><h8>Change the answer:</h8>
                                      </div>
                                            <div class="option_wrapper">
                                            <input type="radio" name="correctanswer" value="option1" id="test1" />
                                            <label for="test1" >Option1</label>
                                            <input type="radio" name="correctanswer" value="option2" id="test2" />
                                            <label for="test2">Option2</label>
                                                <input type="radio" name="correctanswer" value="option3" id="test3" />
                                            <label for="test3">Option3</label>
                                                <input type="radio" name="correctanswer" value="option4" id="test4" />
                                            <label for="test4">Option4</label>
                                    </div>
                                    </div>

                                  <div class="card  blue-grey lighten-5">
                                  <div class="card-content black-text">

                                    <h5>Explanation</h5>
                                    <textarea id="textarea2" name="explanation" class="materialize-textarea" required><%- current.explanation%></textarea>
                                      </div>  
                                      </div> 

                                  <div class="card  blue-grey lighten-5">
                                  <div class="card-content black-text">
                                    <h5>Description of Change</h5>
                                    <textarea id="changedescription" name="changedescription" class="materialize-textarea" ></textarea>
                                  </div></div>
                  
                                    <div class="row center">
                                    <div class= "col s4">
                                        <button class="btn waves-effect waves-light orange z-depth-4" name="submission" value="draft" type="submit">Draft</button>
                                  </div>
                                  <div class= "col s4">
                                        <button class="btn waves-effect waves-light orange z-depth-4" name="submission" value="final" type="submit">Submit</button>
                 </div>
                                    </div>
                                </form>
                                </div>
                                <div class = "col s4">
                                <h5> Previous Versions:</h5>
                                  <% if(data.length > 1) { %>
                                        <% for(var i=0; i < data.length; i++) { %>
                                    <a href="/student/<%= classname%>/myquestions/<%= data[i].id%>" >   
                                  <div class="card  blue-grey lighten-5">
                                    <div class="card-content black-text">
                                    <%= i+1%>) <%= data[i].question%>
                                    <hr>
                                    <%= data[i].changedescription %>
                                    </div>
                                    </div>
                                    </a>
                                    <% } %>
                                    <% } else{ %>
                                    <p> No previous saved drafts for this question</p>
                                    <% } %>

                                </div>
                     
</div>
</div>




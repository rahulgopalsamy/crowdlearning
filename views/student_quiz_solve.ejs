</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a id="brand-image" class="brand-logo">CrowdLearning</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/<%=link%>/<%=classname%>/coursepage"><%= classname%></a></li>
        <li><a href="/<%= link%>/home">Course</a></li>
        <li><a href="/user/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
    <div class="container">
                <div class="row top-margin">
                         <div class="col s12">
                          <form action="/student/<%= classname%>/quiz/attempt/<%= question.id%>" method="post">
                                    <div class="card  blue-grey lighten-5">
                                    <div class="card-content black-text">
                                      <div class="row"><h5>Question <%= number%></h5>
                                        <%= question.question%>
                                      </div>
                                      </div>
                                    </div>

                                    <div class="card  blue-grey lighten-5">
                                    <div class="card-content black-text">
                                       <h6>Answer/Distractors</h6><br>
                                      <% for(var i=0; i < question.options.length; i++) { %>
                                      <input name="correctanswer" id="<%=i+1%>" value="<%=i+1%>" type="radio">
                                       <label for="<%=i+1%>"><%=question.options[i]%></label>
                                                    <br>
                                                           <% } %>


                                         </div>

                                      </div>
                                </div>


</div>
<div class="row center">
  <button type="submit">Submit</button>
</div>
</form>
</div>
</div>
</div>




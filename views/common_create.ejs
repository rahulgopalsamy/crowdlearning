<body>
  <nav>
    <div class="nav-wrapper">
      <a id="brand-image" class="brand-logo">CrowdLearning</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/<%=link%>/<%=classname%>/coursepage"><%= classname%></a></li>
        <li><a href="/<%= link%>/home">Course</a></li>
        <li><a href="/user/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
    <div class="container"> 
        <div class="row">
          <div class="input-field col s12">
              
              <form method="post" enctype = "multipart/form-data" action="/<%=link%>/<%= classname%>/createquestion">
                 <div class="card blue-grey darken-1">
                  <div class="card-content white-text">                  
                    <span class="card-title">Topic</span>
                    <select name="topic" id="topic" required>
                      <option disabled selected>Choose your option</option>
                                    <% for(var i=0; i < data.length; i++) { %>
                                    <option value="<%= data[i]._id%>"><%= data[i].topicname %></option>
                                   <% } %>
                                  </select>                  </div>
                 </div>   


                <div class="card blue-grey darken-1">
                  <div class="card-content white-text">                  
                    <span class="card-title">Question Body</span>
                     <textarea id="textarea1" name="question" class="materialize-textarea" required></textarea>
                  </div>
                 </div>   
                 
                   <div class="card blue-grey darken-1">
                  <div class="card-content white-text">
                    <span class="card-title">Answer/Distractors</span>                       
                          <input name="options" placeholder="Enter  option 1 (Required)" type="text" class="validate" required/>
                          <input name="options" placeholder="Enter  option 2 (Required)" type="text" class="validate" required/>
                          <input name="options" placeholder="Enter  option 3 (Optional)" type="text"/>
                          <input name="options" placeholder="Enter  option 4 (Optional)" type="text"/>  
                          <br>

                          <select name="correctanswer" required>
                            <option value="" disabled selected>Choose Correct Answer</option>
                            <option value="1">Option 1</option>
                            <option value="2">Option 2</option>
                            <option value="3">Option 3</option>
                            <option value="4">Option 4</option>
                          </select>
                  </div>
                 </div> 

                  <div class="card blue-grey darken-1">
                  <div class="card-content white-text">
                    <span class="card-title">Explanation</span>
                     <textarea id="textarea2" name="explanation" class="materialize-textarea" required></textarea>
                  </div>
                 </div>    
                  <div class="row center">
                  <div class="col s6 center">
                        <button class="btn waves-effect waves-light orange z-depth-4" name="submission" value="draft" type="submit">Draft</button>
                  </div>
                 <div class="col s6 center">
                        <button class="btn waves-effect waves-light orange z-depth-4" name="submission" value="final" type="submit">Submit</button>
                 </div>   
                  </div>

              </form>
              </div>
            </div>
        </div>
  </div>
    <script>
     $(document).ready(function(){
    $('.collapsible').collapsible();
         $('select').material_select();
         var max_fields      = 3; //maximum input boxes allowed
    var wrapper         = $(".input_fields_wrap"); //Fields wrapper
    var add_button      = $(".add_field_button"); //Add button ID
    
    var x = 1; //initlal text box count
    $(add_button).click(function(e){ //on add input button click
        e.preventDefault();
        if(x < max_fields){ //max input box allowed
            x++; //text box increment
            $(wrapper).append(' <input type="text" name="options" placeholder = "Enter Option'+[x+1]+'"/><a href="#" class="remove_field">Remove</a></div>'); //add input box
            
        $(".option_wrapper").append('<input type="radio" name="correctanswer" value="option'+[x+1]+'" id="test'+[x+1]+'" /><label for="test'+[x+1]+'" >Option'+[x+1]+'</label>');     
        }
    });
    
    $(wrapper).on("click",".remove_field", function(e){ //user click on remove text
        e.preventDefault(); $(this).parent('div').remove(); x--;
    });
    
     $("#mybrick").change(function(){
         var selection = $('#mybrick option:selected').text();
       $("#brickDisplay").replaceWith("<span id='brickDisplay'>"+selection+"</span>");  
     });      
    
  });

    </script>

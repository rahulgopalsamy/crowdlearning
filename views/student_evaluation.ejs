<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title>CL | Evaluation</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="/css/common.css" type="text/css" rel="stylesheet" media="screen,projection"/>
  <link href="/css/student_evaluation.css" type="text/css" rel="stylesheet" media="screen,projection"/>
        <link rel="icon"  type="image/png" href="/img/crowdlearning.png">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script  src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
    
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a id="brand-image" class="brand-logo">CrowdLearning</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/<%=link%>/<%=classname%>/coursepage"><%= classname%></a></li>
        <li><a href="/<%= link%>/home">Course</a></li>
        <li><a href="/user/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
<div class="mycontainer">
        <div class="row top-margin">
                      <div class="col s8">
                                    <div class="card z-depth-1">
                                       <div class="card-content">
                                           <span class="card-title">Question</span>
                                            <%- data.question%>
                                       </div>
                                    </div>
                                    <div class="card z-depth-1">
                                       <div class="card-content">
                                         <span class="card-title">Answer Choice</span>
                                         <% for(var i=0; i < data.options.length; i++) { %>
  
                        <p>
                          <input name="answer" type="radio" value="option1" id="<%-data.options[i]%>" disabled />
                          <label for="<%-data.options[i]%>"><%-data.options[i]%></label><br>
                        </p>
  
                                          <% } %>
                                    <br> <h6>Correct answer is <%- data.correctanswer%></h6>
                                                
                                       </div>
                                    </div> 

                                    <div class="card z-depth-1">
                                       <div class="card-content">
                                           <span class="card-title">Explanation</span>
                                            <%- data.explanation%>
                                       </div>
                                    </div>     
                     </div>
<form method="post" action="/student/<%= classname%>/evaluate">
                     <div class=" card col s4 z-depth-2 white-text blue-grey darken-2">
                                    <div class="row">
                                    <h6 class="orange-text top-margin">Clarity / Language</h6>
        
                                        <select name="clarity" class="icon"  >
                                          <option disabled selected>Choose your opinion</option>
                                          <option value="clear"  class="left circle">Clearly stated and understandable</option>
                                          <option value="ambiguous"  class="left circle">Few mistakes</option>
                                          <option value="bad"  class="left circle">Needs further revision</option>
                                        </select>
                                  
                                      </div>     
                                    
                                
                                    <div class="row">
                                    <h6 class=" orange-text">Conceptual Difficulty</h6>
                                        <select name="difficulty" class="icon">
                                          <option value="" disabled selected>Choose your opinion</option>
                                          <option value="challenging"  class="left circle">Challenging</option>
                                          <option value="average"  class="left circle">Average</option>
                                          <option value="low"  class="left circle">Testing Memory (Low)</option>
                                        </select>
                                         
                                      </div> 
                                    
                                    
                             
                                    <div class="row">
                                    <h6 class="orange-text">Creativity / Engagement</h6>
                                        <select name="creativity" class="icon">
                                          <option value="" disabled selected>Choose your opinion</option>
                                          <option value="intersting" data-icon="/img/happy.jpg" class="left circle">Intersting Problem setup</option>
                                          <option value="average" data-icon="/img/unhappy.png" class="left circle">Tricky</option>
                                          <option value="boring" data-icon="/img/sad.png" class="left circle">Not engaging</option>
                                        </select>
                                      </div> 
                    
                         
                         <div class="row">
                                    <h6 class="orange-text">Time Requirement</h6>
                                      
                                        <select name="time" class="icon">
                                          <option value="" disabled selected>Choose your opinion</option>
                                          <option value="good" class="left circle">solvable within 5 mins</option>
                                          <option value="bad" class="left circle">Takes longer time to solve</option>
                                        </select>
                                          </div>
                                      
                                        <div class="input-field">
                                          <textarea name="comments" id="textarea1" class="materialize-textarea"></textarea>
                                          <label class="orange-text" for="textarea1">Suggestions:</label>
                                        </div>
                                        <div class="row center">
                                           <button class="btn waves-effect waves-light orange z-depth-4" type="submit">Submit</button>
                                        </div>
                                      </form>
                            </div> 
                      </div>
         </div> 
                          <script>
                                 $(document).ready(function() {
                                                    $('select').material_select();
                                                  });
                          </script>
    </div>    

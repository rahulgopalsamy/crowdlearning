</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a id="brand-image" class="brand-logo">CrowdLearning</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/<%=link%>/<%=classname%>/coursepage"><%= classname%></a></li>
        <li><a href="/<%= link%>/home">Course</a></li>
        <li><a href="/user/logout">Logout</a></li>
      </ul>
    </div>
  </nav>
    <div class="mycontainer">
    <div class = "row center"> <p> <span class= "red-text">This question is under review. Changes cannot be made at this moment!</span></p></div>
                <div class="row top-margin">

                         <div class="col s8">
                                  
                                    
                                    <div class="card  blue-grey lighten-5">
                                    <div class="card-content black-text">
                                      <div class="row"><h5>Question Body</h5>
                                        <%= current.question%>
                                      </div>
                                      </div>
                                    </div>
                                    
                                    <div class="card  blue-grey lighten-5">
                                    <div class="card-content black-text">
                                       <h5>Answer/Distractors</h5>
                                      <% for(var i=0; i < current.options.length; i++) { %>
                                                   <%= i+1%>) <%=current.options[i]%>
                                                           <% } %>
                                        
                                        <br><h8><b>The right answer is <%= current.correctanswer%></b></h8>
                                         </div>

                                      </div>

                                  <div class="card  blue-grey lighten-5">
                                  <div class="card-content black-text">

                                    <h5>Explanation</h5>
                                    <%= current.explanation%>
                                      </div>  
                                      </div> 
                                </div>
                                <div class = "col s4">
                                <h5> Previous Versions:</h5>
                                  <% if(data.length > 1) { %>
                                        <% for(var i=0; i < data.length; i++) { %>
                                    <a href="/student/<%= classname%>/show/<%= data[i].id%>" >   
                                  <div class="card  blue-grey lighten-5">
                                    <div class="card-content black-text">
                                    <%= i+1%>) <%= data[i].question%>
                                    <hr>
                                    <%= data[i].changedescription %>
                                    </div>
                                    </div>
                                    </a>
                                    <% } %>
                                    <% } else{ %>
                                    <p> No previous saved drafts for this question</p>
                                    <% } %>

                                </div>
                     
</div>
<div class="row center">
  <a href="/student/<%=classname%>/myquestions"> Go back</a>
</div>
</div>




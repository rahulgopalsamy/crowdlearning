<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script  src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
    
    <script>
    $(document).ready(function() {
    $('select').material_select();
  });
    </script>
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a href="/" id="brand-image" class="brand-logo center">CrowdLearning</a>
    </div>
  </nav>
    <div class="container"> 
    <form id="registration-form" class="col s12 card-panel z-depth-3" method="post" action="/user/register">
      <div class="row">
          <fieldset>
              <legend class="orange-text">Registration Form</legend>
        <div class="input-field col s6">
          <input  name="firstname" id="first_name" type="text" class="validate" required>
          <label class="active" for="first_name">First Name</label>
        </div>
          
          <div class="input-field col s6">
          <input name="lastname" id="last_name" type="text" class="validate" required>
          <label class="active" for="last_name">Last Name</label>
        </div>
          
              
          <div class="input-field col s6">
          <input name="username" placeholder="use lowercase" id="user_name" type="text" class="validate" minlength="5" required>
          <label class="active" for="user_name">Username</label>
        </div>
              
                <div class="input-field col s6">
          <input name="email" placeholder="UB Email" id="email" type="email" class="validate" required>
          <label class="active" for="email">Email Address</label>
        </div>
          
          <div class="input-field col s6">
          <input name="password" placeholder="must be atleast 8 characters long" id="password" type="password" class="validate" minlength=8 required>
          <label class="active" for="password">Password</label>
              <div id="toggle"></div>
        </div>
              
<div class="input-field col s6">
          <input name="confirm-password" placeholder="" id="confirm-password" type="password" class="validate" minlength=8 required>
          <label class="active" for="confirm-password">Confirm Password</label>
              <div id="toggle"></div>
        </div>
                    <div class="input-field col s12">
    <select id ="role" name="role">
      <option disabled selected>Choose your Role</option>
      <option value="Student">Student</option>
      <option value="Instructor">Instructor</option>
    </select>
    <label>CrowdLearning Role</label>
  </div> 
            
                
              
              <div class="input-field col s12">
          <input name="passcode" placeholder="Instructor Passcode" id="passcode" type="text" class="validate">
        </div> 
              
            <div class="row center">
               <button class="btn waves-effect waves-light orange" type="submit">Submit
    <i class="material-icons right">send</i>
  </button>
              </div>
          </fieldset>
        </div>
    </form>
        <p></p>
        <script>
            $(document).ready(function(){
                $("#passcode").hide();
               $('#role').change(function(){
                  var selection = $('#role').val();
                   switch(selection)
                           {
                               case 'Instructor':
                                   $("#passcode").show();
                                   break;
                               case 'Student':
                                   $("#passcode").hide();
                                   break;                
                                 case 'Web Admin':
                                   $("#passcode").show();
                                   break;  
                                   
                           }
  
            })
                });
            
        </script>

    $(document).ready(function() {
    $('select').material_select();
  });
    </script>
</head>
<body>
  <nav>
    <div class="nav-wrapper">
      <a href="#" id="brand-image" class="brand-logo center">CrowdLearning</a>
    </div>
  </nav>
    <div class="container"> 
    <form id="registration-form" class="col s12 card-panel z-depth-3" method="post" action="/user/register">
      <div class="row">
          <fieldset>
              <legend class="orange-text">Registration Form</legend>
        <div class="input-field col s6">
          <input  name="firstname" id="first_name" type="text" class="validate" required>
          <label class="active" for="first_name">First Name</label>
        </div>
          
          <div class="input-field col s6">
          <input name="lastname" id="last_name" type="text" class="validate" required>
          <label class="active" for="last_name">Last Name</label>
        </div>
          
                <div class="input-field col s6">
          <input name="email" id="email" type="email" class="validate" required>
          <label class="active" for="email">Email Address</label>
        </div>
        
          <div class="input-field col s6">
          <input name="username" id="user_name" type="text" class="validate" maxlength="10" required>
          <label class="active" for="user_name">Username</label>
        </div>
          
          <div class="input-field col s6">
          <input name="password" placeholder="must be atleast 8 characters long" id="password" type="password" class="validate" minlength=8 required>
          <label class="active" for="password_name">Password</label>
        </div>
               <div class="input-field col s6">
          <input id="compare_password" type="password" class="validate">
          <label class="active" for="compare_password">Re-type Password</label>
        </div>
                <div class="input-field col s6">
    <select name="role">
      <option disabled selected>Choose your Role</option>
      <option value="Student">Student</option>
      <option value="Instructor">Instructor</option>
      <option value="Admin">Admin</option>
    </select>
    <label>CrowdLearning Role</label>
  </div> 
              
                <div class="input-field col s6">
          <input name="ubnumber" placeholder="UB student number" id="ubit" type="number" class="validate" required>
          <label class="active" for="email">UBIT Number</label>
        </div> 
            <div class="row center">
               <button class="btn waves-effect waves-light orange z-depth-3" type="submit">Submit
    <i class="material-icons right">send</i>
  </button>
              </div>
          </fieldset>
        </div>
    </form>
  </div>
